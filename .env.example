POSTGRES_PASSWORD=change-this-postgres-password
DATABASE_SSL=false
JWT_SECRET=change-this-jwt-secret
API_KEY_SECRET=change-this-api-key-secret
ADMIN_RESET_TOKEN=

# Optional bind address for local debug access
POSTGRES_BIND=127.0.0.1
ES_BIND=127.0.0.1

# Frontend build-time API base (publicly reachable from browser)
VITE_API_BASE=http://localhost:8000
# Optional CORS overrides (leave empty to use safe localhost defaults)
CORS_ALLOW_ORIGINS=
CORS_ALLOW_ORIGIN_REGEX=
CORS_ALLOW_CREDENTIALS=false

# Optional remote Context8 (federated search)
REMOTE_CONTEXT8_BASE=
REMOTE_CONTEXT8_API_KEY=
REMOTE_CONTEXT8_ALLOW_OVERRIDE=false
# Optional: header override allowlist, comma-separated hosts (e.g. api.context8.org,localhost)
REMOTE_CONTEXT8_ALLOWED_HOSTS=
REMOTE_CONTEXT8_TIMEOUT=6

# Embedding service
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIM=384

# Elasticsearch tuning (optional)
ES_INDEX=solutions
ES_KNN_WEIGHT=0
ES_BM25_WEIGHT=1

# API runtime hardening
API_NOFILE_SOFT=65536
API_NOFILE_HARD=65536

# Optional: override container names (useful to avoid conflicts)
# CONTEXT8_POSTGRES_NAME=context8-postgres
# CONTEXT8_ES_NAME=context8-es
# CONTEXT8_EMBEDDING_NAME=context8-embedding
# CONTEXT8_API_NAME=context8-api
# CONTEXT8_FRONTEND_NAME=context8-frontend
